  and ST_PAIRMODE
  eor #$ff
  ror a
  rtl

mfunc_isenabled_autosave
  .databank 0
  .dpage 0
  lda CFG_ENABLE_AUTOSAVE
  eor #$ff
  ror a
  rtl

mfunc_chg_brightness
  .databank 0
  .dpage 0
  sta tgt_bright
  sta bright_limit
  rtl

mfunc_chg_ledbright
  .databank 0
  .dpage 0
  phb
    pha
      lda #$00
      pha
      plb                    ; DBR = $00 (MCU_CMD/SNES_CMD need bank $00)
    pla
    sta CFG_LED_BRIGHTNESS
    lda #CMD_LED_BRIGHTNESS
    rep #$10
    .xl
    ldx #$0000
-   sta MCU_CMD
    cmp SNES_CMD
    beq +
    inx
    bne -
+
  plb
  rtl

